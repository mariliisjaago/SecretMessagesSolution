@page
@model SecretMessagesWeb.Pages.LoginModel
@{
}

<div class="text-center">
    <h2>Login page</h2>
    <br />
    <h3>Hello, @Model.UserName!</h3>
    <br />

    <form method="post" asp-page="/ReadMessages">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <button type="submit" class="btn btn-primary">Read new messages</button>
    </form>
    <p></p>
    <form method="post" asp-page="/SendMessage">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <button type="submit" class="btn btn-primary">Send a message</button>
    </form>
</div>